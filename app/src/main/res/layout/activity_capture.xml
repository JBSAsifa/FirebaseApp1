<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E7D2F8"
    android:gravity="center"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image Section"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_marginBottom="16dp"
        android:gravity="center"/>

    <!-- ImageView -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@color/cardview_light_background"
        android:contentDescription="Logo Image"
        android:layout_marginBottom="24dp" />

    <!-- Capture Image Button -->
    <Button
        android:id="@+id/captureImageBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Capture Image"
        android:backgroundTint="@color/black"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp" />

    <!-- Load From Gallery Button -->
    <Button
        android:id="@+id/loadFromGalleryBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Load From Gallery"
        android:backgroundTint="@color/black"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp" />
</LinearLayout>
